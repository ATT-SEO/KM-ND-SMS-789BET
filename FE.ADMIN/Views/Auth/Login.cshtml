@{
}
@model LoginRequestDTO

<form method="post">
    <div class="container p-4">
        <div class="row text-center">
            <h3>Login</h3>
        </div>
        <div class="row">
            <div class="col-12 col-md-6 pb-2">
                <input asp-for="UserName" class="form-control" placeholder="Username..." value="" />
                <span asp-validation-for="UserName" class="text-danger" />
            </div>
            <div class="col-12 col-md-6 pb-2">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password..." value="" />
                <span asp-validation-for="Password" class="text-danger" />
            </div>
            <div class="col-12 col-md-6 pb-2">
                <select asp-for="ProjectCode" asp-items="@ViewBag.ProjectList" class="form-select">
                    <option disabled selected>--Select Project--</option>
                </select>
                <span asp-validation-for="ProjectCode" class="text-danger" />
            </div>
            <div class="col-12 col-md-6 pb-2">
                <input type="submit" class="form-control btn btn-success" value="Login" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}