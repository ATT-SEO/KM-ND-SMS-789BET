@model SiteDTO
<header class="page-header page-header-compact page-header-light border-bottom bg-white mb-4">
    <div class="container-xl px-4">
        <div class="page-header-content">
            <div class="row align-items-center justify-content-between pt-3">
                <div class="col-auto mb-3">
                    <h1 class="page-header-title">
                        Chỉnh sửa Site
                    </h1>
                </div>
                <div class="col-12 col-xl-auto mb-3">
                    <a class="btn btn-sm btn-light text-primary" asp-action="Index">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-left me-1"><line x1="19" y1="12" x2="5" y2="12"></line><polyline points="12 19 5 12 12 5"></polyline></svg>
                        Trở lại
                    </a>
                </div>
            </div>
        </div>
    </div>
</header>
<form asp-controller="Site" asp-action="Edit">
    <input asp-for="Id" hidden />
    <input hidden class="form-control" type="datetime-local" asp-for="CreatedTime" />
    <div class="row mt-3">
        <div class="col-xl-8 m-auto">
            <div class="card mb-4">
                <div class="card-header">Thông tin site</div>
                <div class="card-body">
                    <div class="row gx-3 mb-3">
                        <div class="col-md-6">
                            <label class="small mb-1" for="Site">Name</label>
                            <input class="form-control" id="Site" asp-for="Name">
                        </div>
                        <div class="col-md-6">
                            <label class="small mb-1" for="Status">Ẩn hiện</label>
                            <div class="form-check form-switch">
                                <input class="form-check-input" id="Status" type="checkbox" role="switch" asp-for="Status" />
                            </div>
                        </div>
                        
                    </div>
                    <button class="btn btn-primary" type="submit">Cập nhật</button>
                </div>
            </div>
        </div>
    </div>
</form>